        android:layout_width="wrap_content"/>

    <Button
        android:id="@+id/minusBtn2"
        android:text="@string/minus"
        app:layout_constraintTop_toBottomOf="@+id/player2"
        app:layout_constraintLeft_toRightOf="@+id/plusBtn2"
