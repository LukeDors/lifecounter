        app:layout_constraintTop_toBottomOf="@+id/player3"
        app:layout_constraintLeft_toRightOf="@+id/plusBtn3"
        android:layout_marginTop="5dp"
        android:width="50dp"
        android:height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="5dp"
