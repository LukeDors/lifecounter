<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="60dp"
        android:text="Player1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plusBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:width="50dp"
        android:height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="5dp"
        android:text="@string/plus"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintLeft_toLeftOf="@+id/player1"/>

    <Button
        android:id="@+id/minusBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:width="50dp"
        android:height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="5dp"
        android:text="@string/minus"
        app:layout_constraintLeft_toRightOf="@+id/plusBtn1"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <Button
        android:id="@+id/plusFiveBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:width="50dp"
        android:height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="5dp"
        android:text="@string/plusFive"
        app:layout_constraintLeft_toRightOf="@+id/minusBtn1"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

        <Button
        android:id="@+id/minusFiveBtn1"
        android:text="@string/minusFive"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintLeft_toRightOf="@+id/plusFiveBtn1"
        android:layout_marginTop="5dp"
        android:width="50dp"
        android:height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <EditText
